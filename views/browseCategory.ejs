<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/browseCategory.css">

    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <title>Browse</title>
</head>
<body>
    <%- include('partials/navBar') %>
<div id="container">
    <div>
    <form action="/search" method="POST">
    <div class="input-group">
        <input id="search" type="search" name="query" class="form-control rounded" placeholder="Search" aria-label="Search"
        aria-describedby="search-addon" />
        <button type="submit" class="btn btn-outline-primary">search</button>
      </div>
    </form>
    <ul>
        <% if(Object.keys(universities).length === 0) {%>
            <h2 style="margin-top: 4vw;" >Sorry, No universities found!</h2>  
            <% } %> 
    <% for (let ele of universities) {%>
    <button id="uni" onclick="location.href='/notes/<%= ele._id%>';" type="button" class="btn btn-outline-primary"><%= ele.name %></button>
    <% } %>
    </ul>
</div>
</div>
</body>
</html>